% SHOW_BILDER  Demo for SHOWSEQ
%

load bilder.mat

% d       256x256x18   9437184  double array
%
% 18 Frames, [ min(d(:)) max(d(:)) ] == [ -5.2002  6.1177 ]
%

%*******************************************************
% ColorMap Jet, centered at ZERO
%  oddinary ColorNumber saves before artifacts arround ZERO

showseq( d , ...
         'csym'     , 0        , ...
         'cmap'     , jet(65)  , ...
         'space'    , [ 0  0 ] , ...
         'author'   , 'R. Käse, IfM Kiel' , ...
         'apos'     , [ 0.01  0.01 ] );

%-------------------------------------------------------
% Center of ColorMap --> White

showseq( d , ...
         'csym'     , 0        , ...
         'cmap'     , { 'bright' jet(65) 1 0.5 } , ...
         'space'    , [ 0  0 ] , ...
         'author'   , 'R. Käse, IfM Kiel' , ...
         'apos'     , [ 0.01  0.01 ] );

%*******************************************************
% Modified Jet

showseq( d , ...
         'csym'     , 0        , ...
         'cmap'     , { 'bright' mjet(65) 1 0.5 } , ...
         'space'    , [ 0  0 ] , ...
         'author'   , 'R. Käse, IfM Kiel' , ...
         'apos'     , [ 0.01  0.01 ] );

showseq( d , ...
         'csym'     , 0         , ...
         'clim'     , [ -4  5 ] , ...
         'cmap'     , { 'bright' mjet(65) 1 0.5 } , ...
         'space'    , [ 0  0 ] , ...
         'author'   , 'R. Käse, IfM Kiel' , ...
         'apos'     , [ 0.01  0.01 ] );

%*******************************************************
% With Labels

[cnf,cfg] = showseq( d , ...
         'csym'     , 0         , ...
         'clim'     , [ -4  5 ] , ...
         'cmap'     , { 'bright' mjet(65) 1 0.5 } , ...
         'space'    , [ 0  0 ] , ...
         'label'    , { '1' '2' '3' '4' '5' '6' } , ...
         'lpos'     , [ -0.1  0.1 ] , ...
         'author'   , 'R. Käse, IfM Kiel' , ...
         'apos'     , [ 0.01  0.01 ] );

saveimg(cfg.fig,'test_i.jpg','.jpg100',2);

%------------------------------------------------------
% Surface Mode, slow but better Quality in Print

[cnf,cfg] = showseq( d , ...
         'type'     , 'surface' , ...
         'csym'     , 0         , ...
         'clim'     , [ -4  5 ] , ...
         'cmap'     , { 'bright' mjet(65) 1 0.5 } , ...
         'space'    , [ 0  0 ] , ...
         'label'    , { '1' '2' '3' '4' '5' '6' } , ...
         'lpos'     , [ -0.1  0.1 ] , ...
         'author'   , 'R. Käse, IfM Kiel' , ...
         'apos'     , [ 0.01  0.01 ] );

saveimg(cfg.fig,'test_s.jpg','.jpg100',2);

